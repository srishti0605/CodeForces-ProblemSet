#include<iostream>
#include<conio.h>
#include<string.h>
#include <bits/stdc++.h>
using namespace std;
int main()
{ int n,size;
string s;
string x;
x.resize(4);
std::vector<string> res;
cin>>n;
res.resize(n);
 
for(int i=0;i<n;i++){
 
    cin>>s;
    res[i]=s;
    //cout<<res[i];
}
 
 
for(int i=0;i<n;i++){
    size=res[i].length();
    if(size>10)
    {s=res[i];
    x[0]=s[0];
   x[3]=s[size-1];
  
    
    cout<<x[0]<<size-2<<x[3]<<endl;
  
    }
    else
    cout<<res[i]<<endl;
}
return 0;
    
    
}
